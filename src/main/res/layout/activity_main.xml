<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longchherviberate.luominming.viberate.MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="龙旗测试部马达震动测试"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#000" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/begin"
        android:text="倒计显示"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/begin"
        android:layout_marginTop="37dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25dp" />
    <Button
        android:id="@+id/begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="53dp"
        android:keepScreenOn="true"
        android:onClick="onClick"
        android:text="开始测试"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="0dp" />
    <Button
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/begin"
        android:layout_alignBottom="@+id/begin"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/begin"
        android:layout_toRightOf="@+id/begin"
        android:keepScreenOn="false"
        android:onClick="onClick"
        android:text="结束测试"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:scaleType="centerCrop"
        android:src="@drawable/huizhou" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:text="惠州龙旗测试部设计2018.3\n"
        />
</RelativeLayout>
